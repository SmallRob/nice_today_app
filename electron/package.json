{
  "name": "nice-today-desktop",
  "version": "1.0.0",
  "description": "Nice Today - 生物节律与玛雅历法桌面应用",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "set NODE_ENV=development && electron .",
    "build": "npm run build-frontend && npm run build-electron",
    "build-frontend": "cd ../frontend && npm run build",
    "build-electron": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:mac": "electron-builder --mac",
    "dist:linux": "electron-builder --linux",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "electron",
    "biorhythm",
    "maya",
    "calendar",
    "desktop"
  ],
  "author": "Nice Today Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "axios": "^1.3.4",
    "canvas": "^3.2.0"
  },
  "build": {
    "appId": "com.nicetoday.desktop",
    "productName": "Nice Today",
    "copyright": "Copyright © 2025 Nice Today",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "services/**/*",
      "public/**/*"
    ],
    "extraResources": [
      {
        "from": "../frontend/build",
        "to": "app",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "../backend",
        "to": "backend",
        "filter": [
          "electron_backend.py",
          "utils/**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Nice Today"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.lifestyle",
      "darkModeSupport": true
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Education"
    }
  }
}