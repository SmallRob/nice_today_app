{
  "name": "nice-today-app",
  "version": "1.0.0",
  "description": "Nice Today - 生物节律与玛雅历法应用",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:electron\"",
    "dev:frontend": "cd frontend && npm start",
    "dev:electron": "cd electron && npm run dev",
    "build": "node scripts/build.js",
    "build:frontend": "cd frontend && npm run build",
    "build:electron": "cd electron && npm run build",
    "test": "node scripts/integration-test.js",
    "dist": "npm run build && cd electron && npm run dist",
    "dist:win": "npm run build && cd electron && npm run dist:win",
    "dist:mac": "npm run build && cd electron && npm run dist:mac",
    "dist:linux": "npm run build && cd electron && npm run dist:linux",
    "build:electron-app": "node scripts/build.js",
    "install:all": "npm install && cd frontend && npm install && cd ../electron && npm install",
    "clean": "node scripts/clean-build.js",
    "clean:build": "node scripts/clean-build.js",
    "release": "node scripts/release.js",
    "release:patch": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major"
  },
  "keywords": [
    "biorhythm",
    "maya",
    "calendar",
    "electron",
    "react"
  ],
  "author": "Nice Today Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.0.0",
    "png-to-ico": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
